<!DOCTYPE html>
<html>
<head>
    <title>View course</title>

    <%include partials/head%>
</head>
<body>
<% include partials/menu %>
<h1>My Courses</h1>
<table class="table">
    <thead>
    <br>
    <h4>Allocated courses for this semesters:</h4>
    <tr>
        <th scope="col">Course Code</th>
        <th scope="col">Course Name</th>
        <th scope="col">Credits</th>
        <th scope="col">Drop</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i=0; i<data.length; i++) { %>
        <tr>
            <td><%= data[i].cid%></td>
            <td><%= data[i].name%></td>
            <td><%= data[i].credits%></td>
            <td><form action="drop_course?cid=<%= data[i].cid %>" method="post">
            <input type="submit" name="drop_course" value="X" /></form></td>
        </tr>
    <% } %>
    </tbody>
</table>
    <table class="table">
        <thead>
        <br>
        <h4>All courses taken in previous semesters:</h4>
        <tr>
            <th scope="col">Course Code</th>
            <th scope="col">Course Name</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i=0; i<data2.length; i++) { %>
            <tr>
                <td><%= data2[i].cid%></td>
                <td><%= data2[i].name%></td>
            </tr>
        <% } %>
        </tbody>
    </table>
</body>
</html>
